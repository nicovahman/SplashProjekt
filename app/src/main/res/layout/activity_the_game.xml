<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TheGame">

    <TextView
        android:id="@+id/infotekst"
        android:layout_width="276dp"
        android:layout_height="70dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="132dp"
        android:fontFamily="sans-serif"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="132dp" />

    <EditText
        android:id="@+id/gættesboks1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp"
        android:autoSizeTextType="uniform"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="361dp" />

    <TextView
        android:id="@+id/forkertebogstaver"
        android:layout_width="299dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/infotekst"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-27dp"
        android:layout_marginBottom="127dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="sans-serif"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="208dp" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="170dp"
        android:textSize="24sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/antalbogstaverTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_marginEnd="-81dp"
        android:layout_marginBottom="-174dp"
        android:layout_toStartOf="@+id/infotekst" />

    <Button
        android:id="@+id/guessbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gættesboks1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-69dp"
        android:background="@color/colorPrimary"
        android:text="Gæt"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/velkomst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/guessbutton"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-143dp"
        android:layout_marginTop="45dp"
        android:textSize="24sp" />

</RelativeLayout>